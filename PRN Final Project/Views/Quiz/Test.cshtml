<body>
    @Html.Partial("~/Views/Shared/_Header.cshtml")
    <main>

        <div class="hero-area slider-area">
            <div class="hero-height2 hero-bg2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap">
                                <h2>Học phần của bạn</h2>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                                        <li class="breadcrumb-item"><a href="#">Học phần của bạn</a></li>
                                        <li class="breadcrumb-item"><a href="#">Kiểm tra</a></li>

                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <section class="sticky-right d-sm-block">
            <div class="row text-center quiz-setting">
                <h4>Setting</h4>
            </div>
            <div class="row quiz-setting">
                <div class="col-sm-10"><label>Số Lượng câu hỏi: </label></div>
                <div class="col-sm-2"></div>
            </div>
            <div class="row quiz-setting">
                <div class="amount-center">
                    <input type="text" id="quiz-amount-input" />
                    /<label id="quiz-amount-number">100</label>
                </div>
            </div>

            <div class="row quiz-setting">
                <div class="col-sm-10"><label>Trả lời bằng: </label></div>
                <div class="col-sm-2"></div>
            </div>
            <div class="row quiz-setting">
                <table class="quiz-form-type">
                    <tr>
                        <td><input type="radio" name="quiz-type" id="quiz-type-term" value="1" checked /></td>
                        <td> <label id="quiz-amount-number">Thuật ngữ</label></td>
                    </tr>
                    <tr>
                        <td>
                            <input type="radio" id="quiz-amount-input" name="quiz-type" id="quiz-type-definition" value="0" />
                        </td>
                        <td><label id="quiz-amount-number">Định Nghĩa</label></td>
                    </tr>
                </table>

            </div>

            <div class="row quiz-setting">
                <div class="col-sm-10"><label>Kết quả cuối</label></div>
                <div class="col-sm-2"></div>
            </div>
            <div class="row quiz-setting">
                <h3 class="quiz-result" id="quiz-result">
                    0%
                </h3>

            </div>

            <div class="row quiz-setting">
                <button class="btn quiz-retake-button" id="btn-retake-quiz">Làm bài kiểm tra</button>

            </div>

        </section>


        <section class="popular-directorya-area section-padding fix">
            <div class="container row">
                <div class="col-sm-12 col-md-2">

                </div>
                <div class="col-sm-12 col-md-10 ">
                    <div class="row">
                        <div class="section-tittle text-center mb-40">
                            <h2>VN101</h2>
                            <h2>Câu hỏi về Việt Nam</h2>
                            <p>4 câu hỏi trắc nghiệm</p>
                        </div>
                    </div>
                    <div class="row" id="quiz-test-box">


                    </div>
                    <div class="row quiz-submit-button">
                        <button class="btn" id="submit-button">Submit</button>
                    </div>
                </div>


            </div>
        </section>

    </main>
    @Html.Partial("~/Views/Shared/_Footer.cshtml")
    <div id="back-top">
        <a class="wrapper" title="Go to Top" href="#">
            <div class="arrows-container">
                <div class="arrow arrow-one">
                </div>
                <div class="arrow arrow-two">
                </div>
            </div>
        </a>
    </div>



    <script src="~/Assets/js/vendor/modernizr-3.5.0.min.js"></script>
